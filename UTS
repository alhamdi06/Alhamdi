    private void btnpersenActionPerformed(java.awt.event.ActionEvent evt) {                                          
         Tampilan.setText("%");
        bil1=Double.parseDouble(angka);
        angka="";
        pilih=5;
    }                                         

    private void btnhapusActionPerformed(java.awt.event.ActionEvent evt) {                                         
        Tampilan.setText("");
        bil1=0.0;
        bil2=0.0;
        jumlah=0.0;
        angka="";
    }                                        

    private void btntamahActionPerformed(java.awt.event.ActionEvent evt) {                                         
        Tampilan.setText("+");
        bil1=Double.parseDouble(angka);
        angka="";
        pilih=1;
    }                                        

    private void btnkurangActionPerformed(java.awt.event.ActionEvent evt) {                                          
         Tampilan.setText("-");
        bil1=Double.parseDouble(angka);
        angka="";
        pilih=2;
    }                                         

    private void btnkaliActionPerformed(java.awt.event.ActionEvent evt) {                                        
         Tampilan.setText("*");
        bil1=Double.parseDouble(angka);
        angka="";
        pilih=3;
    }                                       

    private void btnbagiActionPerformed(java.awt.event.ActionEvent evt) {                                        
        Tampilan.setText("/");
        bil1=Double.parseDouble(angka);
        angka="";
        pilih=4;
    }                                       

    private void btnhasilActionPerformed(java.awt.event.ActionEvent evt) {                                         
        switch(pilih){
        case 1:
            bil2 = Double.parseDouble(angka);
            jumlah = bil1 + bil2;
            angka = Double.toString(jumlah);
            Tampilan.setText(angka);
            break;
        case 2:
            bil2 = Double.parseDouble(angka);
            jumlah = bil1 - bil2;
            angka = Double.toString(jumlah);
            Tampilan.setText(angka);
            break;
        case 3:
            bil2 = Double.parseDouble(angka);
            jumlah = bil1 * bil2;
            angka = Double.toString(jumlah);
            Tampilan.setText(angka);
            break;
        case 4:
            bil2 = Double.parseDouble(angka);
            jumlah = bil1 / bil2;
            angka = Double.toString(jumlah);
            Tampilan.setText(angka);
            break;
        case 5:
            bil2 = Double.parseDouble(angka);
            jumlah = bil1 % bil2;
            angka = Double.toString(jumlah);
            Tampilan.setText(angka);
        }
    }                                        

